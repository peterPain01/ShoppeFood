<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/item_grid_admin_restaurant_img"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_grid_admin_restaurant_Restaurant_view_BackGroundFood"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_grid_admin_restaurant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="4dp"
        android:text="Chicken Thai Biriyani"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/item_grid_admin_restaurant_img"
        app:layout_constraintTop_toTopOf="@+id/item_grid_admin_restaurant_img" />

    <Button
        android:id="@+id/item_grid_admin_restaurant_cancle"
        android:layout_width="153dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_white"
        android:text="Ban"
        android:textColor="#FF3326"
        app:layout_constraintBottom_toBottomOf="@+id/item_grid_admin_restaurant_img"
        app:layout_constraintStart_toStartOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:src="@drawable/ic_star_primary"
        app:layout_constraintBottom_toTopOf="@+id/item_grid_admin_restaurant_cancle"
        app:layout_constraintStart_toStartOf="@+id/item_grid_admin_restaurant_name"
        app:layout_constraintTop_toBottomOf="@+id/item_grid_admin_restaurant_name" />

    <TextView
        android:id="@+id/item_grid_admin_restaurant_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="4.9"
        android:textColor="#FB6D3A"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <TextView
        android:id="@+id/item_grid_admin_restaurant_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Rating"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_grid_admin_restaurant_rating"
        app:layout_constraintStart_toEndOf="@+id/item_grid_admin_restaurant_rating"
        app:layout_constraintTop_toTopOf="@+id/item_grid_admin_restaurant_rating"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>