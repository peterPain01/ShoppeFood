<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="viewModel"
            type="com.foodapp.viewmodel.CreateProductViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:background="#FFFFFFFF"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingHorizontal="24dp">

        <RelativeLayout
            android:id="@+id/r2wgoq2n5d9h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFFFF"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/r4l88x6o3i0c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rkoxvphgr5k9_rl"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="18dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/add_new_items_back"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/back" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/r67zzn0wfqkf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add New Items"
                        android:layout_weight="1"
                        android:textColor="#32343E"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/r8821brujryl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="Reset"
                        android:textColor="#FB6D3A"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/r9v7yp06640t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginVertical="4dp"
                    android:text="Item name"
                    android:textColor="#32343E"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/rc0mheetv92q"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="1dp"
                    android:background="@drawable/sffe8e9ecsw1cr10bfffcfcfc"
                    android:inputType="text"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:hint="Mazalichiken Halim"
                    android:text="@={viewModel.product.product_name}"
                    android:textColor="#9B9BA5"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/rs8djna66g8s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="6dp"
                    android:text="Upload photo/video"
                    android:textColor="#32343E"
                    android:textSize="13sp" />

                <LinearLayout
                    android:id="@+id/rm84qj6snubj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="3dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <ImageView
                        android:id="@+id/add_new_items_upload"
                        android:layout_width="125dp"
                        android:layout_height="128dp"
                        android:background="@drawable/btn_circle"
                        android:scaleType="fitXY"
                        android:src="@drawable/upload" />
                </LinearLayout>

            <LinearLayout
                android:id="@+id/racsso8fnqzkc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="3dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rcqnw4l860mv"
                    android:layout_width="186dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="0dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="10dp"
                    android:text="Original Price"
                    android:textColor="#32343E"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/rcqnwe4l860mv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="10dp"
                    android:text="Discounted price"
                    android:textColor="#32343E"

                    android:textSize="13sp" />
            </LinearLayout>


                <LinearLayout
                    android:id="@+id/racsso8nqzkc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="3dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/rc0mheetdv92q"
                        android:layout_width="151dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="1dp"
                        android:background="@drawable/sffe8e9ecsw1cr10bfffcfcfc"
                        android:text='@{String.format("%.1f", viewModel.product.product_original_price)}'
                        android:hint="$50"
                        android:inputType="number"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp"
                        android:layout_marginEnd="40dp"
                        android:textColor="#9B9BA5"
                        android:textSize="12sp" />


                    <EditText
                        android:id="@+id/rc0mhedetdv92q"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="1dp"
                        android:background="@drawable/sffe8e9ecsw1cr10bfffcfcfc"
                        android:text='@{String.format("%.1f", viewModel.product.product_discounted_price)}'
                        android:hint="$50"
                        android:inputType="number"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp"
                        android:layout_marginEnd="40dp"
                        android:textColor="#9B9BA5"
                        android:textSize="12sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/racsseo8nqzkc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="3dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/r30u2gdseink92x"
                        android:layout_width="192dp"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:textColor="#32343E"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/r4t19eq6rm313"
                        android:layout_width="158dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="34dp"
                        android:background="@drawable/sffe8e9ecsw1cr10bfffcfcfc"
                        android:orientation="vertical"
                        android:paddingHorizontal="19dp"
                        android:paddingVertical="11dp">

                        <Spinner
                            android:id="@+id/add_new_items_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/rh24gsirf3g8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="1dp"
                    android:layout_marginBottom="22dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                </LinearLayout>



                <RelativeLayout
                    android:id="@+id/rf7jfim7uknj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="23dp"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/ri3956ky0rkk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:inputType="text"
                            android:paddingHorizontal="18dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="63dp"
                            android:text='@={viewModel.product.product_description}'
                            android:hint="Lorem ipsum dolor sit amet, consectetur adips cing elit. Bibendum in vel, mattis et amet dui mauris turpis."
                            android:textColor="#6B6E82"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/r79xheglhu9v"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="-12dp"
                        android:text="Description"
                        android:textColor="#32343E"
                        android:textSize="13sp" />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/add_new_items_submit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/cr12bffff7621"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:textColor="#FFFFFF"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="18sp" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>