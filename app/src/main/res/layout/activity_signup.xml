<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    >
    <data>
        <variable
            name="signupViewModel"
            type="com.foodapp.viewmodel.AuthViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.auth.Signup">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/darkblue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="116dp"
                    android:layout_height="102dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ellipse_1005"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:background="@drawable/circle_button_background"
                    android:text="&lt;"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColorLink="#5E616F"
                    android:textAlignment="center"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="32dp"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="116dp"
                    android:layout_height="102dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="-1dp"
                    android:layout_marginTop="-1dp"
                    android:layout_marginEnd="1dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/line" />
            </RelativeLayout>


            <TextView
                android:id="@+id/txtLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:text="Sign Up"
                android:textStyle="bold"
                android:textAlignment="center"
                android:fontFamily="@font/sen_bold"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/txtHelperLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please sign up to get started"
                android:textColor="#C0C0C5"
                android:textAlignment="center"
                android:fontFamily="@font/sen_regular"
                android:textSize="16dp"
                android:layout_marginBottom="30dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/rounded_corner_background"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingHorizontal="18dp"
                >
                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="NAME"
                    android:textColor="#636363"
                    android:textSize="16dp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:ems="10"
                    android:padding="8dp"
                    android:paddingStart="12dp"
                    android:background="@drawable/rounded_edittext_background"
                    android:hint="john doe"
                    android:inputType="textEmailAddress"
                    />


                <TextView
                    android:id="@+id/txtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="6dp"
                    android:text="EMAIL"
                    android:textColor="#636363"
                    android:textSize="16dp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:ems="10"
                    android:padding="8dp"
                    android:paddingStart="12dp"
                    android:background="@drawable/rounded_edittext_background"
                    android:hint="email@gmail.com"
                    android:text="@={signupViewModel.email}"
                    android:inputType="textEmailAddress"
                    />


                <TextView
                    android:id="@+id/txtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="6dp"
                    android:textColor="#636363"
                    android:textSize="16dp"
                    android:text="PASSWORD" />

                <com.google.android.material.textfield.TextInputLayout
                    app:passwordToggleEnabled="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:ems="10"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:padding="8dp"
                        android:paddingStart="12dp"
                        android:background="@drawable/rounded_edittext_background"
                        android:inputType="textPassword"
                        android:textStyle="bold"
                        android:text="@={signupViewModel.password}"
                        />
                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="6dp"
                    android:textColor="#636363"
                    android:textSize="16dp"
                    android:text="RE-TYPE PASSWORD" />

                <com.google.android.material.textfield.TextInputLayout
                    app:passwordToggleEnabled="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:ems="10"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:padding="8dp"
                        android:paddingStart="12dp"
                        android:background="@drawable/rounded_edittext_background"
                        android:inputType="textPassword"
                        android:textStyle="bold"
                        android:text="@={ signupViewModel.confirm_password}"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/errorMsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:fontFamily="@font/sen_bold"
                    android:layout_marginTop="12dp"
                    android:textColor="#FF004F"
                    android:textSize="18sp"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/signup_btnSignup"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:text="SIGN UP"
                    android:background="@drawable/button_border"
                    android:textColor="@color/white"
                    />

            </LinearLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>