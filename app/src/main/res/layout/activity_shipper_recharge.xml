<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShipperRecharge">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <ImageView
              android:id="@+id/shipper_recharge_bacl"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/ic_back"
              />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:fontFamily="@font/sen_bold"
              android:text="Recharge to Balance"
              android:textColor="@color/black"
              android:textSize="20sp" />
      </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/shipper_recharge_20"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:textSize="16sp"
                    android:background="@drawable/button_border_not_focus"
                    android:textStyle="bold"
                    android:text="20.000 VND" />

                <Button
                    android:id="@+id/shipper_recharge_50"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:textSize="16sp"
                    android:background="@drawable/button_border_not_focus"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="12dp"
                    android:text="50.000 VND" />

                <Button
                    android:id="@+id/shipper_recharge_100"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:textSize="16sp"
                    android:background="@drawable/button_border_not_focus"
                    android:textStyle="bold"
                    android:text="100.000 VND" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/shipper_recharge_200"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:background="@drawable/button_border_not_focus"
                    android:backgroundTint="@color/orange_200"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="200.000 VND" />

                <Button
                    android:id="@+id/shipper_recharge_500"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:textSize="16sp"
                    android:background="@drawable/button_border_not_focus"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="12dp"
                    android:text="500.000 VND" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resouce money: "
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zalo Pay"
                    android:textSize="20sp"
                    android:textColor="#2196F3"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            >
            <Button
                android:id="@+id/shipper_recharge_rechargeButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Recharge"
                android:background="@color/orange"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>