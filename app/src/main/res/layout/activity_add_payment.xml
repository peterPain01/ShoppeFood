<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:paddingHorizontal="8dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ruzjsg212mcg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/add_payment_backBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/rme6mbyvf7c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="8dp"
                android:text="Payment method"
                android:textColor="#181C2E"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/risvj5aar7o"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/add_payment_zalopay"
                    android:layout_width="91dp"
                    android:layout_height="60dp"
                    android:paddingHorizontal="12dp"
                    android:background="@drawable/sffff7621sw2cr9_619999885559082"
                    android:scaleType="centerInside"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/ic_zalopay" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zalo Pay"
                    android:textColor="#464E57"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/add_payment_vnpay"
                    android:layout_width="91dp"
                    android:layout_height="60dp"
                    android:background="#FFF0F5FA"
                    android:paddingHorizontal="12dp"
                    android:scaleType="centerInside"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/ic_vnpay" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vn Pay"
                    android:textColor="#464E57"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="91dp"
                    android:layout_height="60dp"
                    android:id="@+id/add_payment_visa"
                    android:background="#FFF0F5FA"
                    android:paddingHorizontal="12dp"
                    android:scaleType="centerInside"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/visa" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visa"
                    android:textColor="#464E57"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/add_payment_mastercard"
                    android:layout_width="91dp"
                    android:layout_height="60dp"
                    android:paddingHorizontal="12dp"
                    android:scaleType="centerInside"
                    android:layout_marginBottom="4dp"
                    android:background="#FFF0F5FA"
                    android:src="@drawable/mastercard" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mastercard"
                    android:textColor="#464E57"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/rfz2jiduyud7"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="17dp"
            android:layout_marginTop="40dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="21dp">

            <TextView
                android:id="@+id/rdtiv952i7qp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11dp"
                android:text="Master Card"
                android:textColor="#31343D"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/rh1bimzoe3if"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/rvjs6zvt9shi"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="9dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="5dp">

                    <RelativeLayout
                        android:id="@+id/rwr7hrjf85ti"
                        android:layout_width="10dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="3dp"
                        android:clipChildren="false"
                        android:clipToPadding="false">

                        <ImageView
                            android:id="@+id/rhecja3k6316"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="-10dp"
                            android:layout_marginBottom="0dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/card_2" />
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/r8jsddui4crr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:text="*************"
                    android:textColor="#31343D"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/r6j7hhsuqd2q"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="436"
                    android:textColor="#31343D"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/r8xy00mmkti5"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/sfff0f5fasw2cr10bffffffff"
            android:clickable="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="26dp">

            <ImageView
                android:id="@+id/ryvjnl901am7"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginEnd="6dp"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/plus_copy" />

            <TextView
                android:id="@+id/r3hxr275sa8o"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New"
                android:textColor="#FF7621"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rghp2x9x1hmn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="8dp"
        android:focusable="true"
        android:orientation="vertical"
        android:paddingVertical="28dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FF7622"
            app:cardCornerRadius="12dp">

            <Button
                android:id="@+id/add_payment_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:onClick="@{viewModel.placeOrder}"
                android:text="Confirm"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>