                    android:layout_height="60dp"
                    android:background="@drawable/sffff7621sw2cr9_619999885559082"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/rqdrrsuc0zua"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleType="centerInside"
                        tools:src="@drawable/mastercard"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <RelativeLayout
                android:id="@+id/rv03cp3nn0b"
                android:layout_width="91dp"
                android:layout_height="60dp"
                android:background="@drawable/cr9_624489784240723bfff0f5fa"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/r7skgncxfozh"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="centerInside"
                    tools:srcCompat="@drawable/paypal"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rjt79ghre7a8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="26dp"
            android:layout_marginBottom="57dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rw0bzkfa4d4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:text="Cash"
                android:textColor="#464E57"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/risj6jldyzms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="52dp"
