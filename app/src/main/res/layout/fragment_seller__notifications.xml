<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.main.Seller_Notifications">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/seller_notification_imageButton2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/btn_circle"
            android:contentDescription="back"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/seller_notification_imageView4"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="@+id/seller_notification_imageButton2"
            app:layout_constraintEnd_toEndOf="@+id/seller_notification_imageButton2"
            app:layout_constraintStart_toStartOf="@+id/seller_notification_imageButton2"
            app:layout_constraintTop_toTopOf="@+id/seller_notification_imageButton2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Notifications"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/seller_notification_imageButton2"
            app:layout_constraintStart_toEndOf="@+id/seller_notification_imageButton2"
            app:layout_constraintTop_toTopOf="@+id/seller_notification_imageButton2" />

        <TextView
            android:id="@+id/seller_notification_textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="32dp"
            android:text="Notifications"
            android:textColor="#FF7622"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seller_notification_imageButton2" />

        <TextView
            android:id="@+id/seller_notification_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Messages"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/seller_notification_textView2"
            app:layout_constraintTop_toTopOf="@+id/seller_notification_textView2" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/seller_notification_list_notify"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seller_notification_textView2" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>