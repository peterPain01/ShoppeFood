<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="347dp"
    android:layout_height="649dp">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Offers"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:text="Filter your search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/fragment_filter_restaurant_view_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/btn_circle"
        android:contentDescription="close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_close"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_filter_restaurant_view_close"
        app:layout_constraintEnd_toEndOf="@+id/fragment_filter_restaurant_view_close"
        app:layout_constraintStart_toStartOf="@+id/fragment_filter_restaurant_view_close"
        app:layout_constraintTop_toTopOf="@+id/fragment_filter_restaurant_view_close" />

    <HorizontalScrollView
        android:layout_width="307dp"
        android:layout_height="57dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Scrollable content for restaurant filters"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="@+id/fragment_filter_restaurant_view_close"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/fragment_filter_restaurant_view_LinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        </LinearLayout>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>