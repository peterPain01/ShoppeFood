<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="6dp"
    android:orientation="horizontal"
    android:weightSum="3"
    android:background="#fafafa"
    >

   <RelativeLayout
       android:layout_width="0dp"
       android:layout_weight="1"
       android:layout_height="100dp">
       <ImageView
           android:id="@+id/item_popular_product_image"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:scaleType="centerCrop"
           android:src="@drawable/kfc" />

       <TextView
           android:id="@+id/item_popular_product_sold"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="10+ Sold"
           android:textColor="@color/white"
           android:padding="4dp"
           android:textSize="14sp"
           android:layout_alignParentTop="true"
           android:layout_alignParentStart="true"
           android:background="#ffba09"
           />
   </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:padding="10dp">

        <TextView
            android:id="@+id/item_popular_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Ga Ran KFC"
            android:textSize="20sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/item_popular_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="11dp"
            android:textSize="18sp"
            android:text="59.000 d"
            android:textColor="#e85c45"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/item_popular_product_addToCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="#e15727"
            android:padding="6dp"
            android:src="@drawable/ic_plus" />
    </RelativeLayout>
</LinearLayout>