<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="viewModel"
            type="com.foodapp.viewmodel.ManageAddressViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".view.main.ManageAddress">
    <androidx.fragment.app.FragmentContainerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/activity_manage_address_info"
        tools:context=".view.main.ManageAddress" />

    <LinearLayout
        android:id="@+id/activity_manage_address_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADDRESS"
                android:textColor="#32343E"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/activity_manage_address_box"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@drawable/rounded_corner_background"
                android:backgroundTint="#F0F5FA"
                android:textColor="#6B6E82"
                android:singleLine="true"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_marginTop="5dp"
                android:text="@={viewModel.address.street}"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALIAS"
                android:textColor="#32343E"
                android:textSize="14sp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rounded_corner_background"
                android:backgroundTint="#F0F5FA"
                android:textColor="#6B6E82"
                android:singleLine="true"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_marginTop="5dp"
                android:text="@={viewModel.address.name}"/>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="5dp">
            <Button
                android:id="@+id/activity_manage_address_home_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_background"
                android:backgroundTint="#F0F5FA"
                android:textColor="#32343E"
                android:textSize="14sp"
                android:elevation="0dp"
                android:onClick="onClickTypeChoose"
                android:text="Home"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <Button
                android:id="@+id/activity_manage_address_company_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_background"
                android:backgroundTint="#F0F5FA"
                android:textColor="#32343E"
                android:textSize="14sp"
                android:elevation="0dp"
                android:text="Company"
                android:onClick="onClickTypeChoose"
                app:layout_constraintStart_toEndOf="@id/activity_manage_address_home_btn"
                app:layout_constraintEnd_toStartOf="@id/activity_manage_address_other_btn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <Button
                android:id="@+id/activity_manage_address_other_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_background"
                android:backgroundTint="#F0F5FA"
                android:textColor="#32343E"
                android:layout_weight="1"
                android:elevation="0dp"
                android:textSize="14sp"
                android:onClick="onClickTypeChoose"
                android:text="Other"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/activity_manage_address_save_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_marginTop="50dp"
            android:text="Save location"
            android:background="@drawable/rounded_corner_background"
            android:backgroundTint="#FF7622"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>