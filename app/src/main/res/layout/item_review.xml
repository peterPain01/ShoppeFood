<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_review_cardView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:cardCornerRadius="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_review_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:scaleType="fitXY" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/item_review_Container"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="#F6F8FA"
        android:layout_margin="2dp"
        app:cardBackgroundColor="#F6F8FA"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_review_cardView"
        app:layout_constraintTop_toTopOf="@+id/item_review_cardView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#F6F8FA">

            <TextView
                android:id="@+id/item_review_textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:text="20/12/2020"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_review_textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Great Food and Service"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_review_textView6" />

            <ImageView
                android:id="@+id/item_review_star1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_star_primary"
                app:layout_constraintStart_toStartOf="@+id/item_review_textView7"
                app:layout_constraintTop_toBottomOf="@+id/item_review_textView7" />

            <ImageView
                android:id="@+id/item_review_star2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="3dp"
                android:src="@drawable/ic_star_primary"
                app:layout_constraintStart_toEndOf="@+id/item_review_star1"
                app:layout_constraintTop_toTopOf="@+id/item_review_star1" />

            <ImageView
                android:id="@+id/item_review_star3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="3dp"
                android:src="@drawable/ic_star_primary"
                app:layout_constraintStart_toEndOf="@+id/item_review_star2"
                app:layout_constraintTop_toTopOf="@+id/item_review_star2" />

            <ImageView
                android:id="@+id/item_review_star4"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="3dp"
                android:src="@drawable/ic_star_primary"
                app:layout_constraintStart_toEndOf="@+id/item_review_star3"
                app:layout_constraintTop_toTopOf="@+id/item_review_star3" />

            <ImageView
                android:id="@+id/item_review_star5"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="3dp"
                android:src="@drawable/ic_star"
                app:layout_constraintStart_toEndOf="@+id/item_review_star4"
                app:layout_constraintTop_toTopOf="@+id/item_review_star4" />

            <TextView
                android:layout_width="247dp"
                android:layout_height="59dp"
                android:layout_marginTop="20dp"
                android:text="This Food so tasty delicious. Breakfast so fast Delivered in my place. Chef is very  friendly. Iâ€™m really like chef for Home Food  Order. Thanks. "
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/item_review_star1"
                app:layout_constraintTop_toBottomOf="@+id/item_review_star1" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>