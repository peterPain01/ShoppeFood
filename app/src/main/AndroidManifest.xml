            android:exported="false" />
        <activity
            android:name=".view.main.restaurant_view"
            android:exported="false" />
        <activity
            android:name=".view.main.CategoryDetail"
            android:exported="false" />
        <activity
            android:name=".view.main.food_payment"
            android:exported="false" />
        <activity
            android:name=".view.main.Search"
            android:exported="false" />
        <activity
            android:name=".view.main.Homepage"
            android:exported="false" />
        <activity
            android:name=".view.auth.Verification"
            android:exported="false" />
        <activity
            android:name=".view.auth.ForgotPassword"
            android:exported="false" />
        <activity
            android:name=".view.auth.Signup"
            android:exported="false" />
        <activity
            android:name=".view.main.Order"
            android:exported="false" />
        <activity
            android:name=".view.main.PersonalInfo"
            android:exported="false" />
        <activity
            android:name=".view.main.seller_page"
            android:exported="false" />
        <activity
            android:name=".view.main.UserInfo"
            android:exported="false" />
        <activity
